<%- include('../include/header.ejs') %> 
<%- include('../include/sidebar.ejs') %> 
<%- include('../include/navbar.ejs') %> 

            
<div class="main-content container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3><%= pageTitle %> </h3>
                <p class="text-subtitle text-muted">Change information about your admin on this page.</p>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class='breadcrumb-header'>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="/admin/all">Admin</a></li>
                        <li class="breadcrumb-item active" aria-current="page"><%= pageTitle %></li>
                    </ol>
                </nav>
            </div>
        </div>

    </div>
    <!-- Basic Horizontal form layout section start -->
    <section id="basic-horizontal-layouts">
    <div class="row match-height">
        <div class="col-lg-7 col-md-10 col-12">
        <div class="card">
            <div class="card-header">
            <h4 class="card-title"></h4>
            </div>
            <div class="card-content">
            <div class="card-body">
                <% if(errorMessage) { %> 
                <div class="alert alert-danger alert-dismissible show fade">
                    <%= errorMessage %> 
                    <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <% } %> 
                <% if(msgSuccess) { %> 
                    <div class="alert alert-success alert-dismissible show fade">
                        Edit admin success âœ…
                        <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                <% } %> 

                <form action="" class="form form-horizontal" novalidate enctype="multipart/form-data" method="POST" autocomplete="off">
                <div class="form-body">
                    <% allAdmin.forEach(admin => {  %> 
                    <div class="row">
                        <div class="col-md-4">
                            <label>Fullname</label>
                        </div>
                        <div class="col-md-8">
                            <div class="form-group has-icon-left">
                                <div class="position-relative">
                                    <input name="fullname" type="text" class="form-control <%= validationErrors.find(e => e.param === 'fullname') ? 'is-invalid' : '' %>" value="<%= admin.fullname %>" id="first-name-icon">
                                    <div class="form-control-icon">
                                        <i data-feather="user"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label>Email</label>
                        </div>
                        <div class="col-md-8">
                            <div class="form-group has-icon-left">
                                <div class="position-relative">
                                    <input hidden type="text" name="email" class="form-control" value="<%= admin.email %>" id="first-name-icon">
                                    <input disabled  type="email" name="fake" class="form-control" value="<%= admin.email %>" id="first-name-icon">
                                    <div class="form-control-icon">
                                        <i data-feather="mail"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                     
                        <div class="col-md-4">
                            <label>Role</label>
                        </div>
                        <div class="col-md-8">
                            <div class="form-group has-icon-left">
                                <div class="position-relative">
                                    <select  name="role" class="form-select" id="basicSelect" <%= validationErrors.find(e => e.param === 'role') ? 'is-invalid' : '' %>>

                                        <% if(admin.role === 'Administrator') { %> 
                                            <option>Administrator</option>
                                            <option>Standard</option>
                                        <% } else { %> 
                                            <option>Standard</option>
                                            <option>Administrator</option>
                                        <% } %> 

                                    </select>
                                </div>
                            </div>
                        </div>
                    <div class="col-12 d-flex justify-content-start ">
                         <a href="/admin/reset-password/<%= admin.id %>">Reset Password?</a>
                    </div>
                    <div class="col-12 d-flex justify-content-end ">
                        <button type="submit" class="btn btn-primary me-1 mb-1">Edit</button>
                        <button type="reset" class="btn btn-light me-1 mb-1">Reset</button>
                    </div>
                    </div>
                    <% }); %> 
                </div>
                </form>
            </div>
            </div>
        </div>
        </div>
    </div>
    <a class="btn btn-badge btn-secondary" href="/admin/all"><i data-feather="arrow-left"></i> Back</a>
    </section>
    


</div>

<%- include('../include/footer.ejs') %> 